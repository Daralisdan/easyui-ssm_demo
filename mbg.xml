<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="DB2Tables" targetRuntime="MyBatis3">
        <!-- 取消注释的配置 -->
        <commentGenerator>
            <property name="suppressAllComments" value="true"/>
        </commentGenerator>

        <!--配置数据库连接信息 -->
        <!-- 逆向生成哪些表 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/easyui?useUnicode=true&amp;characterEncoding=UTF-8"
                        userId="root" password="123456">
        </jdbcConnection>

        <javaTypeResolver>
            <property name="forceBigDecimals" value="false"/>
        </javaTypeResolver>

        <!--指定Javabean生成的位置 -->
        <javaModelGenerator
                targetPackage="com.daralisdan.entity" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true"/>
            <property name="trimStrings" value="true"/>
        </javaModelGenerator>

        <!-- 指定sql映射文件生成的位置 -->
        <sqlMapGenerator targetPackage="mappers"
                         targetProject=".\src\main\resources">
            <property name="enableSubPackages" value="true"/>
        </sqlMapGenerator>

        <!-- 指定dao接口生成的位置，mappers接口生成的位置 -->
        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="com.daralisdan.dao" targetProject=".\src\main\java">
            <property name="enableSubPackages" value="true"/>
        </javaClientGenerator>

        <!-- 指定每个表的生成策略，哪张表对应哪个bean -->
        <!--        <table tableName="users" domainObjectName="User"></table>-->
        <!-- 逆向生成的第二张表 -->
        <!--        <table tableName="user" domainObjectName="User"></table>-->

        <!-- <table tableName="city" domainObjectName="CityPince"></table>
         <table tableName="privince" domainObjectName="Privince"></table>-->
        <table tableName="org" domainObjectName="Org"></table>
    </context>
</generatorConfiguration>